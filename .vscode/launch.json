{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "type": "bun",
        "request": "attach",
        "name": "Debug --only UT",
        // The URL of the WebSocket inspector to attach to.
        // This value can be retrieved by using `bun --inspect`.
        //  bun test --inspect-wait=0.0.0.0:6499
        "url": "ws://0.0.0.0:6499/mapi-ut",
        "preLaunchTask": "launch-only-ut"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Express sample",
      "args": [
        "${workspaceFolder}/samples/express/main.ts"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Graphql sample",
      "args": [
        "${workspaceFolder}/samples/graphql/main.ts"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch collections",
      "args": [
        "${workspaceFolder}/src/cli/cli.ts",
        "--xliff",
        "result/target.xlf"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}